<%= form_for @company do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name, "Nome" %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password, "Senha" %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.button "Sign up" %>
  </p>
<% end %>